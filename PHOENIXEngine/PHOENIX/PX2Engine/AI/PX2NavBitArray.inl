//----------------------------------------------------------------------------
inline void BitArray1D::Clear()
{
	memset(m_pData, 0, m_BufLen * 4);
}
//----------------------------------------------------------------------------
inline int BitArray1D::GetBit(int i)
{
	return (m_pData[i >> 5] >> (i & 31)) & 1;
}
//----------------------------------------------------------------------------
inline void BitArray1D::SetBit(int i, int bit)
{
	unsigned int &data = m_pData[i >> 5];
	int ibit = i & 31;
	data = (data & ~(1 << ibit)) | (bit << ibit);
}
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
inline int BitArray2D::GetWidth() const
{
	return mBitX; 
}
//----------------------------------------------------------------------------
inline int BitArray2D::GetHeight() const
{
	return mBitY;
}
